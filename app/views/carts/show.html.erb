<p id="notice"><%= notice %></p>
<h2>Your Programatic Cart</h2>
<table>

<%= render(@cart.line_items) %>

<tr class="total_line">
<td colspan="2">Total</td>
<td class="total_cell"><%= number_to_currency(@cart.total_price, :unit => "Rs. ")%></td>
</tr>

</table>

<%= button_to "Empty Cart", @cart, :method => :delete, :confirm => "Are you sure?"%>
